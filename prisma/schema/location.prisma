model Location {
    id        String   @id @default(cuid())
    city      String
    country   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    guideLocations GuideLocation[]
    profiles Profile[]

    @@map("locations")
}

model GuideLocation {
    id         String @id @default(cuid())
    guideId    String
    locationId String
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    guide    User     @relation("GuideLocations", fields: [guideId], references: [id], onDelete: Cascade)
    location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

    @@unique([guideId, locationId])
    @@map("guideLocations")
}